<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical" >

    <!-- Edit by wangzhuyi 2015/01/05 start -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/baseColor"
        android:gravity="center"
        android:padding="2dp" >

        <Button
            android:id="@+id/btn_zuixin"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/bt_left_click_shape"
            android:text="最新"
            android:textColor="@color/baseColor"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_zuire"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/bt_right_shape"
            android:text="最热"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:background="@color/gainsboro"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/edit_text_shape"
            android:baselineAligned="false"
            android:iconifiedByDefault="true"
            android:imeOptions="actionSearch"
            android:inputType="textCapWords"
            android:paddingLeft="0dp"
            android:queryHint="输入相关内容进行搜索" />
    </LinearLayout>
    <!-- Edit by wangzhuyi 2015/01/05 end -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

       
    </RelativeLayout>

</LinearLayout>