<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical" >

    <LinearLayout
        android:padding="5dp"
        android:id="@+id/ll_titles"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/baseColor"
        android:gravity="center"
        android:orientation="horizontal"
       >

        <TextView
            android:id="@+id/tv_main_toutiao"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/bt_left_click_shape"
            android:gravity="center"
            android:text="头条"
            android:textColor="@color/baseColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_main_tongban"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bt_center_shape"
            android:gravity="center"
            android:text="同班"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/tv_main_school"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bt_center_shape"
            android:gravity="center"
            android:text="学校"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_main_zhoubian"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/bt_right_shape"
            android:gravity="center"
            android:text="周边"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/pullToRefreshListView"
            style="@style/mListView_2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </com.handmark.pulltorefresh.library.PullToRefreshListView>
    </RelativeLayout>

</LinearLayout>