<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_add_friend_fensi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp" >

    <com.xuanit.move.view.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_add_heade"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="left|top"
        android:src="@drawable/image_loading"
        app:border_color="#009FCC"
        app:border_width="2dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:minHeight="60dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:gravity="top"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_add_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                android:gravity="center"
                android:text="高圆圆"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_center_base"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/item_add_school"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-40dp"
                android:layout_toRightOf="@+id/tv_center_base"
                android:background="@drawable/but_exit_shape"
                android:gravity="center"
                android:text="清华大学 "
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold|italic"
                android:visibility="invisible" />

            <CheckBox
                android:id="@+id/item_add_guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:text="已关注"
                android:textColor="#838B8B"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_add_qianming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="大家都觉得我大家都觉得我本人比照片更好看大家都觉得我本人比照片更好看"
            android:textColor="@color/qianmingColor"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>