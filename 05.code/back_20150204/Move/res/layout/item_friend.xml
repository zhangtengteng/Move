<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_friend_chat"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="20dp"
    android:paddingTop="5dp" >

    <com.xuanit.move.view.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_friend_heade"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="left|top"
        android:src="@drawable/image_loading"
        app:border_color="#009FCC"
        app:border_width="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:minHeight="60dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:gravity="top"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_friends_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="高圆圆"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_center_base"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/item_friend_school"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_center_base"
                android:background="@drawable/but_exit_shape"
                android:layout_marginLeft="-40dp"
                android:gravity="center"
                android:text="清华大学 "
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold|italic" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_friend_qianming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="大家都觉得我本人比照片更好看,大家都觉得我本人比照片更好看,大家都觉得我本人比照片更好看大家都觉得我本人比照片更好看"
            android:textColor="@color/qianmingColor"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:gravity="top"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_friend_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:text="好友数："
                android:textColor="@color/qianmingColor"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/item_friend_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_friend_tip"
                android:text="10000"
                android:textColor="@color/qianmingColor"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_fensi_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="粉丝数："
                android:textColor="@color/qianmingColor"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/item_fensi_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_fensi_tip"
                android:text="10000"
                android:textColor="@color/qianmingColor"
                android:textSize="12sp"
                android:textStyle="italic" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>