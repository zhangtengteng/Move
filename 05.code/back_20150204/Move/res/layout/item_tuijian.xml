<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="20dp"
    android:paddingTop="5dp" >

    <com.xuanit.move.view.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_tuijian_heade"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="left|top"
        android:src="@drawable/image_loading"
        app:border_color="#009FCC"
        app:border_width="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:minHeight="50dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_tuijian_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="高圆圆"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_dongtan_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="动弹数："
                android:textColor="@color/qianmingColor"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/item_tuijian_dongtanshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_dongtan_tip"
                android:text="10000"
                android:textColor="@color/qianmingColor"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_center_base"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tv_jifeng_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-20dp"
                android:layout_toRightOf="@+id/tv_center_base"
                android:text="游戏积分："
                android:textColor="@color/qianmingColor"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/item_tuijian_youxijifen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_toRightOf="@+id/tv_jifeng_tip"
                android:text="10000"
                android:textColor="@color/qianmingColor"
                android:textSize="12sp"
                android:textStyle="italic" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>